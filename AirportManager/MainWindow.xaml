<Window x:Class="AirportManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
         Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <ListBox x:Name="usersList">
            <DataGrid Height="330" Width="592" d:ItemsSource="{d:SampleData ItemCount=5}" Name="dataGrid"/>

        </ListBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <ComboBox Width="100" Margin="10" SelectionChanged="SelectTable" Name="Table">
                <ComboBoxItem Content="Airport"/>
                <ComboBoxItem Content="Airplane"/>
                <ComboBoxItem Content="Flight"/>
                <ComboBoxItem Content="AirplaneBrand"/>
            </ComboBox>
            <Button Content="Add" Width="60" Margin="10" Click="Add_Click" />
        </StackPanel>

    </Grid>
</Window>